<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_title_bar">


        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|bottom"
            android:id="@+id/localVideoFrame"
            android:background="#ddd"/>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/custom_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_room_button_rectangle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >


        <ImageButton
            android:id="@+id/btn_go_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go_back"
            android:scaleType="fitXY"
            android:drawablePadding="5dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_switch_camera"
            android:drawablePadding="5dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:background="#00000000"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/waiting_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting_notification"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>

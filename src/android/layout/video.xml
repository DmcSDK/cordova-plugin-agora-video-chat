<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/waiting_notification"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/waiting_notification"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center"

        android:gravity="center_vertical|center_horizontal" />

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_title_bar">


        <FrameLayout
            android:layout_width="129dp"
            android:layout_height="157dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="right|bottom"
            android:id="@+id/localVideoFrame"
            android:background="#ddd"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/custom_title_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_room_button_rectangle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >


        <TextView
            android:id="@+id/btn_go_back"
            android:layout_width="17dp"
            android:layout_height="13dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_navi_button_back"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/channel_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>


</RelativeLayout>
